        <div class="poster hidden">
            <img src="/assets/Lonely-Blue.jpg" alt="">
        </div>
        <section class="intro-header">
          <div class="container">
            <div class="row">
                <div class="intro-message">
                  <!-- <img src="/assets/logo_FINAL.svg" alt="GOSURF"> -->
                  <h3>We make it easy to go surfing.</h3>
                  <hr class="intro-divider">
                  <ul class="list-inline intro-social-buttons">
                    <li>
                      <a class="btn btn-default btn-lg find-trip">Find Trip</a>
                    </li>
                    <li>
                      <a class="btn btn-default btn-lg">Create Trip</a>
                    </li>
                  </ul>
                </div>
            </div>
          </div>
        </section>
    </div>
</div>

