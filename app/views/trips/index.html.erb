<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqBfeC-s5-oWg9BdzPNA6J_oNp5nID06g"

        async defer></script>
</head>

<!-- video -->
<div class="homepage-hero-module">
    <div class="video-container">
        <div class="filter"></div>
        <video autoplay loop class="fillWidth">
            <source src="/assets/Lonely-Blue.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
            <source src="/assets/Lonely-Blue.webm" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
        </video>
        <div class="poster hidden">
            <img src="/assets/Lonely-Blue.jpg" alt="">
        </div>
        <section class="intro-header">
          <div class="container">
            <div class="row">
                <div class="intro-message">
                  <img src="/assets/final_logo_white.png" alt="Mountain View" style="width:270px;height:202px;">
                  <h3 id="uvp">We make it easy to go surfing.</h3>
                  <hr class="intro-divider">
                  <ul class="list-inline intro-social-buttons">
                    <li>
                      <a class="btn btn-default btn-lg find-trip">Find Trip</a>
                    </li>
                    <li>
                      <a class="btn btn-default btn-lg">Create Trip</a>
                    </li>
                  </ul>
                </div>
            </div>
          </div>
        </section>
    </div>
</div>

<section class="bg-primary" id="search">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading">Search for a trip</h2>
        <hr>
        <p class="text-faded"></p>
        <div class="search_form">

          <!-- <%= text_field_tag :country, {}, class: 'form-control', id: 'country', placeholder: 'Enter Country' %> -->
          <%= country_select(
          "country",
          { priority_countries: ["ES", "US"] },
          { selected: "ES"},
          { class: 'form-control', id: "country" }
          ) %>
          <span class="input-group-btn">
            <button type="button" class="page-scroll btn btn-default btn-xl sr-button search_button" id="search-button">Search</button>
          </span>
        </div>
      </div>
    </div>
  </div>
</section>


<div id="map" class="map-area"></div>
