<section class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <!-- <img src="/assets/gosurf.jpg" alt="GOSURF"> -->
          <h3>We make it easy to go surfing.</h3>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">
            <li>
              <a class="btn btn-default btn-lg find-trip">Find Trip</a>
            </li>
            <li>
              <a class="btn btn-default btn-lg">Create Trip</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="bg-primary" id="search">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading">Search for a trip</h2>
        <hr>
        <p class="text-faded"></p>
        <div class="search_form">
          <%= form_tag class: 'input-group', id: 'search_form'  do %>
          <%= text_field_tag :country, params[:country], class: 'form-control', id: 'country', placeholder: 'Enter Country' %>
          <span class="input-group-btn">
            <%= submit_tag "search", class: "page-scroll btn btn-default btn-xl sr-button search_button", id: "search_button" %>
          </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="results" id="results">
  <div class="container">
    <div class="row">
      <div class="col-lg-2">
      </div>
      <div class="col-lg-10 map">
        <ul><% @trips.each do |trip| %>
            <li><%= trip.destination %></li>
            <li><%= trip.description %></li>
          <% end %>
        </ul>
        <img src="" id="map">
      </div>
    </div>
  </div>
</section>
