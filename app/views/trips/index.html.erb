<section class="bg-primary" id="search">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading">Search for a trip</h2>
        <hr>
        <p class="text-faded"></p>
        <div class="search_form">

          <!-- <%= text_field_tag :country, {}, class: 'form-control', id: 'country', placeholder: 'Enter Country' %> -->
            <%= text_field :search, value = nil, class: "js-search-trip form-control", type: "text"%>

            <%= text_field :country_search, value = nil, class: "js-country-trip form-control hidden", disabled: "true"%>
          <!-- <%= country_select(
          "country",
          { priority_countries: ["ES", "US"] },
          { selected: "ES"},
          { class: 'form-control', id: "country" }
          ) %> -->

            <button data-scroll href="#map" type="button" class="page-scroll btn btn-default btn-xl search_button" id="search-button">Search</button>

        </div>
      </div>
    </div>
  </div>
</section>


<div id="map" class="map-area">
  <div class="container">
  <div class="page-header">
