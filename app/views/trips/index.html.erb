        <div class="poster hidden">
            <img src="/assets/Lonely-Blue.jpg" alt="">
        </div>
        <section class="intro-header">
          <div class="container">
            <div class="row">
                <div class="intro-message">
                  <img class="animated slideInRight" src="/assets/final_logo_white.png" alt="Mountain View" style="width:270px;height:202px;">
