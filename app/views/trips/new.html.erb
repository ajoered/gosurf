<head>
  <meta charset='utf-8'>
  <title>rjshade/gmaps-autocomplete @ GitHub</title>
  <title>Google Maps and jqueryUI</title>

  <!-- google maps -->
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

  <!-- jquery -->
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

  <!-- jquery UI -->
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>

</head>

<section class="form-header">
  <div class="container">
    <div class="row panel">

      <%= form_for [@trip] do |f| %>

      <div class="col-lg-5">

        <h3>Create a new trip!</h3>
        <p>First tell us your planned itinerary...</p>
        <hr>

        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, class: "form-control" %>
        </div>

        <div class="container_search_map">
          <div id='input'>
            <div class="form-group">
          	  <%= f.label :origin %>
          	  <%= f.text_field :origin, class: "form-control", id: "gmaps-input-address", type: 'text', placeholder: 'Start typing a place name...' %>
            </div>
            <div id='gmaps-error'></div>
          </div>
          <div id='gmaps-canvas'></div>
        </div>

        <div class="form-group">
          <%= f.label :destination %>
          <%= f.text_field :destination, class: "form-control"%>
        </div>

        <!-- <div class="container_search_map">
          <div id='input'>
            <input id='gmaps-input-address' placeholder='Start typing a place name...' type='text' />
            <div id='gmaps-error'></div>
          </div>
          <div id='gmaps-canvas'></div>
        </div> -->

      </div>

      <div class="col-lg-2">
      </div>

      <div class="col-lg-5">
        <h3>Additional Info</h3>
        <hr>
          <p>Hey <%= current_user.name %>! Creating a trip?</p>

          <div class="form-group">
            <%= f.label :level %>
            <%= f.select(:level, [['Beginner', 1], ['Intermediate', 2], ['Advanced', 3], ['Expert', 4]],{}, { :class => 'form-control' } ) %>
            <small id="emailHelp" class="form-text text-muted">Beginner, Intermediate or Advanced!</small>
          </div>

          <div class="form-group">
            <%= f.label :kind_of_trip %>
            <%= f.select(:kind_of_trip, [['Group', 1], ['Riding Solo', 2]], {}, { :class => 'form-control' } ) %>
            <small id="emailHelp" class="form-text text-muted">Determine whether you're looking to go in a group or riding solo.</small>
          </div>

          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class: "form-control" %>
            <small id="emailHelp" class="form-text text-muted">Price/seat</small>
          </div>

          <div class="form-group">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :finish_date %>
            <%= f.date_field :finish_date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :max_users %>
            <%= f.text_field :max_users, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :space_material %>
            <%= f.number_field :space_material, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <%= f.button "Create a trip", class: "btn btn-success" %>
        </div>


      <% end %>
      </div>
    </div>
  </section>
