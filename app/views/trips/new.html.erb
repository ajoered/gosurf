<section class="form-header">
  <div class="container">
    <div class="row panel">
      <div class="col-lg-12">
        <h3>Hey <%= current_user.name %>!</h3>
        <h4>Create a new trip!</h4>
        <hr>

        <%= form_for [@trip] do |f| %>

          <div class="form-group">
        	  <%= f.label :level %>
        	  <%= f.text_field :level, class: "form-control" %>
          <small id="emailHelp" class="form-text text-muted">Beginner, Intermediate or Advanced!</small>
          </div>

        	<div class="form-group">
        	  <%= f.label :kind_of_trip %>
        	    <%= f.text_field :kind_of_trip, class: "form-control" %>
          <small id="emailHelp" class="form-text text-muted">Determine whether you're looking to go in a group or riding solo.</small>
          </div>

          <div class="form-group">
        	  <%= f.label :price %>
        	  <%= f.number_field :price, class: "form-control" %>
          <small id="emailHelp" class="form-text text-muted">Price/seat</small>
          </div>

          <div class="form-group">
            <%= f.label :country %>
            <%= f.text_field :country, class: "form-control" %>
          </div>

          <div class="form-group">
        	  <%= f.label :origin %>
        	  <%= f.text_field :origin, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :destination %>
            <%= f.text_field :destination, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :finish_date %>
            <%= f.date_field :finish_date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :max_users %>
            <%= f.text_field :max_users, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :space_material %>
            <%= f.number_field :space_material, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <%= f.button("Create a trip") %>

        <% end %>

        </div>
      </div>
    </div>
  </section>
