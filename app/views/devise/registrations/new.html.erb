<div class="border-form-div">
  <h2 class="login-title">Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :name, autofocus: true, :placeholder => 'Name' %>
    <%= f.text_field :bio, autofocus: true, :placeholder => 'Bio' %>
    <%= f.text_field :level, autofocus: true, :placeholder => 'Level' %>
    <%= f.text_field :phone_number, autofocus: true, :placeholder => 'Phone no.' %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
    <%= f.password_field :password, :placeholder => 'Password' %><br>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.submit "Sign up", :class=>'btn btn-primary btn-login' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
